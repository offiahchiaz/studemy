<% layout('layout') %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= course.image %>" alt="">
        </div>
        
        <div class="col-md-offset-4 col-md-4">
            <h3><%= course.name %></h3>
            <h1>â‚¦<%= course.price %></h1>

            <form method="post">
                <div class="btn-group" role="group" aria-label=""...>
                    <input type="hidden" name="quantity" id="quantity" value="1">
                    <button type="button" id="minus" class="btn btn-default">-</button>
                    <button type="button" id="total" class="btn btn-default">1</button>
                    <button type="button" id="plus" class="btn btn-default">+</button>
                </div>

                <div class="form-group">
                    <input type="hidden" name="product_id" id="product_id" value="<%= course._id %>">
                    <input type="hidden" name="priceHidden" id="priceHidden" value="<%= course.price %>">

                    <input type="text" name="item" class="form-control" value="<%= course.name %>">
                    <input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= course.price %>">
                </div>

                <% if (user) { %>
                    <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
                <% } else { %>
                    <a href="/signup" class="btn btn-primary btn-lg">Signup to Buy</a>
                <% } %>

            </form>

        </div>
    </div>
</div>